<script>
export default ({
  data () {
    return {
      giftList: [],
      A: [],
      B: [],
      C: [],
      D: [],
      E: [],
      F: [],
      card: [], /* 週二聯邦日 */
      button: [] /* 按鈕連結 */
    }
  },
  methods: {
    getGiftList () {
      const url = `${process.env.VUE_APP_API}/api/product/eventproducts?code=20220101`
      this.axios.get(url).then(res => {
        if (res.data.rtnCode !== 0) {
          this.$swal.fire({
            title: `card_A${res.data.rtnMsg}(${res.data.rtnCode})`,
            allowOutsideClick: false,
            confirmButtonColor: '#F8412E',
            confirmButtonText: '確認',
            width: 400,
            customClass: {
              title: 'text-class',
              confirmButton: 'confirm-btn-class'
            }
          })
          return
        }
        this.giftList = res.data.info
        this.giftList.forEach((item) => {
          if (item.code === '20220101_A') {
            this.A = item.products /* 期間限定閃購專區 20220101_A  */
          } else if (item.code === '20220101_B') {
            this.B = item.products /* 即時料理，家常菜 20220101_B */
          } else if (item.code === '20220101_C') {
            this.C = item.products /* 鍋物湯品 20220101_C */
          } else if (item.code === '20220101_D') {
            this.D = item.products /* 水餃麵點 20220101_D */
          } else if (item.code === '20220101_E') {
            this.E = item.products /* 蛋糕甜點 20220101_E  */
          } else if (item.code === '20220101_F') {
            this.F = item.products /* 生鮮肉品，小農蔬果 20220101_F  */
          }
        })
      }
      )
    },
    getCardDiscount () {
      const url = `${process.env.VUE_APP_API}/api/widgets/activitybanner?code=card_A`
      this.$http.get(url).then(res => {
        if (res.data.rtnCode !== 0) {
          this.$swal.fire({
            title: `card_A${res.data.rtnMsg}(${res.data.rtnCode})`,
            allowOutsideClick: false,
            confirmButtonColor: '#F8412E',
            confirmButtonText: '確認',
            width: 400,
            customClass: {
              title: 'text-class',
              confirmButton: 'confirm-btn-class'
            }
          })
          return
        }
        if (res.data.rtnCode === 0) {
          this.card = res.data.info
        }
      })
    },
    goLatestAct () {
      const url = `${process.env.VUE_APP_API}/api/widgets/activitybanner?code=card_B`
      this.$http.get(url).then(res => {
        if (res.data.rtnCode !== 0) {
          this.$swal.fire({
            title: `card_B${res.data.rtnMsg}(${res.data.rtnCode})`,
            allowOutsideClick: false,
            confirmButtonColor: '#F8412E',
            confirmButtonText: '確認',
            width: 400,
            customClass: {
              title: 'text-class',
              confirmButton: 'confirm-btn-class'
            }
          })
          return
        }
        if (res.data.rtnCode === 0) {
          this.button = res.data.info
        }
      })
    },
    goHyperText (DOM) {
      const domHeight = DOM.offsetTop
      window.scrollTo(0, domHeight)
    }
  },
  watch: {
    $route (to, from) {
      if (
        to.fullPath.match('/productboard/product/') ||
        to.fullPath.match('/productboard/productList/')
      ) {
        const recordHeight = window.scrollY
        this.$store.commit('getEventRecordHeight', recordHeight)
      } else {
        this.$store.commit('getEventRecordHeight', '')
      }
    }
  },
  mounted () {
    this.getGiftList()
    this.goLatestAct()
    this.getCardDiscount()
    if (this.$store.state.recordEventReadHeight) {
      // ? 若有點擊產品紀錄，則記錄高度供上一頁返回
      setTimeout(
        () => [
          // ?資料高度生成需要時間，利用setTimeOut讓視窗滑動不同步，才能順利執行
          window.scrollTo(0, this.$store.state.recordEventReadHeight)
        ],
        500
      )
    }
  }
})
</script>

