
// ? webView 固定資訊交換寫法

const webView = {
  // ? 在當前瀏覽器添加監聽器
  AddHandler: function (productId) {
    window.addEventListener('flutterInAppWebViewPlatformReady', webView.ClickBuy(productId))
  },
  // ?在webview傳產品id值給app
  ClickBuy: function (productId) {
    if (productId) {
      const args = [productId]
      window.flutter_inappwebview.callHandler('productHandler', ...args)
    }
  },
  RemoveHandler: function () {
    window.removeEventListener('flutterInAppWebViewPlatformReady', webView.ClickBuy)
  }
}
export default webView
