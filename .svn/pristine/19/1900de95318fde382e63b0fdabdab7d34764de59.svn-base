.headerNavbar{
  .nav-item {
    a {
      &:hover {
        text-decoration: underline;
      }
    }
  }
  
  .navbar-toggler:focus {
    box-shadow: none;
  }
  
  .nav-item {
    &:first-child {
      border-right: 1px solid $secondary;
    }
    img {
      width: 24px;
      height: 24px;
    }
    a {
      display: block;
    }
  }  
}
